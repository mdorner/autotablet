#Unit file for automated rotation of display and input
[Unit]
Description=Automated rotation of display and input devices
Requires=display-manager.serivce
After=display-manager.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 autotablet
KillMode=process
Environment="DISPLAY=:0" "XAUTHORITY=/home/%i/.Xauthority"
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
